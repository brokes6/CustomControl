<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MenuItemLayout">
        <attr name="TitleText" format="string" />
        <attr name="PromptText" format="string" />
        <attr name="TitleImg" format="reference" />
        <attr name="Background" format="reference" />
        <attr name="isSwitch" format="boolean" />
        <attr name="ImageLeftMargin" format="integer" />
        <attr name="Underline" format="boolean" />
        <attr name="TitleSize" format="integer" />
        <attr name="ImageSize" format="integer" />
    </declare-styleable>

    <declare-styleable name="IntPutNumRelativeLayout">
        <attr name="max" format="integer" />
        <attr name="min" format="integer" />
        <attr name="step" format="integer" />
        <attr name="disable" format="boolean" />
        <attr name="BgColoer" format="reference" />
    </declare-styleable>

    <declare-styleable name="SildeMenuView">
        <attr name="function" format="float">
            <flag name="delete" value="0x30" />
            <flag name="read" value="0x50" />
            <flag name="top" value="0x03" />
        </attr>
    </declare-styleable>

    <declare-styleable name="WatchFace">
        <attr name="secondHandColor" format="color" />
        <attr name="minuteHandColor" format="color" />
        <attr name="hourHandColor" format="color" />
        <attr name="scaleColor" format="color" />
        <attr name="faceBackground" format="color" />
        <attr name="scaleShow" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TopTextView">
        <attr name="Top_Text" format="string" />
        <attr name="Bottom_Text" format="string" />
        <attr name="Text_Spacing" format="integer" />
        <attr name="Top_Text_Color" format="color" />
        <attr name="Bottom_Text_Color" format="color" />
        <attr name="Top_Text_Size" format="dimension" />
        <attr name="Bottom_Text_Size" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ImageTopView">
        <attr name="Image_Text_Spacing" format="integer" />
        <attr name="Text_Size" format="integer" />
        <attr name="Image_Text" format="string" />
        <attr name="Image_Drawable" format="reference" />
        <attr name="Image_Size" format="integer" />
        <attr name="Text_Color" format="reference|color" />
        <attr name="Is_radius" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CustomChannelView">
        <attr name="Ch_Top_Drawable" format="reference|color" />
        <attr name="Ch_Bottom_Text" format="string" />
        <attr name="Ch_Bottom_Time" format="string" />
        <attr name="Ch_ImageRadius" format="integer" />
        <attr name="Ch_Middle_Image_Size" format="integer" />
        <attr name="CH_Is_occlusion_on" format="boolean" />
        <attr name="CH_Bottom_Size" format="dimension" />
        <attr name="CH_Bottom_TimeSize" format="dimension" />
        <attr name="CH_Bottom_paddingTop" format="integer" />
    </declare-styleable>

    <declare-styleable name="Selector">
        <!--单选按钮图片-->
        <attr name="img" format="reference" />
        <!--单选按钮选中效果-->
        <attr name="indicator" format="reference" />
        <!--单选按钮标签-->
        <attr name="tag" format="string" />
    </declare-styleable>

    <declare-styleable name="TasksCompletedView">
        <attr name="radius" format="dimension" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="circleColor" format="color" />
        <attr name="ringColor" format="color" />
        <attr name="ringCColor" format="color" />
    </declare-styleable>

    <declare-styleable name="DimPleView">
        <attr name="particlesNum" format="integer" />
        <attr name="particlesRadius" format="float" />
        <attr name="particlesDiffusionRadius" format="float" />
        <attr name="strokeColor" format="reference|color" />
        <attr name="strokeOffSet" format="integer" />
    </declare-styleable>

    <declare-styleable name="RoundRelativeLayout">
        <attr name="rlRadius" format="dimension" />
        <attr name="rlClipBackground" format="boolean" />
        <attr name="Left_radius" format="dimension" />
        <attr name="right_radius" format="dimension" />
        <attr name="LowerLeft_radius" format="dimension" />
        <attr name="lowerRight_radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ShowComment">
        <attr name="isNetWorkUrl" format="boolean" />
        <attr name="displayPicture" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr format="dimension" name="civ_border_width"/>
        <attr format="color" name="civ_border_color"/>
        <attr format="boolean" name="civ_border_overlay"/>
        <attr format="color" name="civ_circle_background_color"/>
    </declare-styleable>

    <!--自定义ViewPager+fragment实现-->
    <declare-styleable name="EasyNavigationBar">
        <!--底部导航栏高度-->
        <attr name="Easy_navigationHeight" format="dimension" />
        <!--底部导航栏背景-->
        <attr name="Easy_navigationBackground" format="color" />
        <!--Tab字体大小-->
        <attr name="Easy_tabTextSize" format="dimension" />
        <!--Tab文字距Tab图标的距离-->
        <attr name="Easy_tabTextTop" format="dimension" />
        <!--Tab图标大小-->
        <attr name="Easy_tabIconSize" format="dimension" />
        <!--Tab未选中字体颜色-->
        <attr name="Easy_tabNormalColor" format="color" />
        <!--Tab选中字体颜色-->
        <attr name="Easy_tabSelectColor" format="color" />
        <!--提示红点的大小-->
        <attr name="Easy_hintPointSize" format="dimension" />
        <!--消息红点的大小-->
        <attr name="Easy_msgPointSize" format="dimension" />
        <!--提示红点距Tab图标的距离-->
        <attr name="Easy_hintPointLeft" format="dimension" />
        <!--消息红点距Tab图标的距离-->
        <attr name="Easy_msgPointLeft" format="dimension" />
        <!--提示红点距离顶部的距离-->
        <attr name="Easy_hintPointTop" format="dimension" />
        <!--消息红点距顶部的距离-->
        <attr name="Easy_msgPointTop" format="dimension" />
        <!--消息红点数字字体大小-->
        <attr name="Easy_msgPointTextSize" format="dimension" />

        <!--消息红点99+的长度-->
        <attr name="Easy_msgPointMoreWidth" format="dimension" />
        <!--消息红点99+的高度-->
        <attr name="Easy_msgPointMoreHeight" format="dimension" />
        <!--消息红点99+的半径-->
        <attr name="Easy_msgPointMoreRadius" format="integer" />
        <!--消息红点的颜色-->
        <attr name="Easy_msgPointColor" format="color" />


        <!--分割线高度-->
        <attr name="Easy_lineHeight" format="dimension" />
        <!--分割线颜色-->
        <attr name="Easy_lineColor" format="color" />

        <!--是否有paddingBottom-->
        <attr name="Easy_hasPadding" format="boolean" />


        <!--中间图片的大小-->
        <attr name="Easy_centerIconSize" format="dimension" />
        <!--底部导航栏和加号的高度  加号会居中-->
        <attr name="Easy_centerLayoutHeight" format="dimension" />
        <!--添加按钮距离底部的距离-->
        <attr name="Easy_centerLayoutBottomMargin" format="dimension" />
        <!--图标显示-->
        <attr name="Easy_scaleType">
            <flag name="CENTER_INSIDE" value="0" />
            <flag name="CENTER_CROP" value="1" />
            <flag name="CENTER" value="2" />
            <flag name="FIT_CENTER" value="3" />
            <flag name="FIT_END" value="4" />
            <flag name="FIT_START" value="5" />
            <flag name="FIT_XY" value="6" />
            <flag name="MATRIX" value="7" />
        </attr>


        <!--图标显示-->
        <attr name="Easy_centerLayoutRule">
            <flag name="RULE_CENTER" value="0" />
            <flag name="RULE_BOTTOM" value="1" />
        </attr>
        <!-- true 点击加号切换fragment
         false 点击加号不切换fragment进行其他操作（跳转界面等）-->
        <attr name="Easy_centerAsFragment" format="boolean" />
        <attr name="Easy_centerSelectTextColor" format="color" />
        <attr name="Easy_centerNormalTextColor" format="color" />
        <attr name="Easy_centerTextSize" format="dimension" />
        <!--加号文字距离顶部加号的距离-->
        <attr name="Easy_centerTextTopMargin" format="dimension" />
        <!--是否和其他tab文字底部对齐-->
        <attr name="Easy_centerAlignBottom" format="dimension" />
        <!--文字大小单位DP还是SP-->
        <attr name="Easy_textSizeType">
            <flag name="TYPE_DP" value="1" />
            <flag name="TYPE_SP" value="2" />
        </attr>


    </declare-styleable>

</resources>