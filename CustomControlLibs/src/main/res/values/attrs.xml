<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MenuItemLayout">
        <attr name="TitleText" format="string" />
        <attr name="PromptText" format="string" />
        <attr name="TitleImg" format="reference" />
        <attr name="Background" format="reference" />
        <attr name="isSwitch" format="boolean" />
    </declare-styleable>

    <declare-styleable name="IntPutNumRelativeLayout">
        <attr name="max" format="integer" />
        <attr name="min" format="integer" />
        <attr name="step" format="integer" />
        <attr name="disable" format="boolean" />
        <attr name="BgColoer" format="reference" />
    </declare-styleable>

    <declare-styleable name="SildeMenuView">
        <attr name="function" format="float">
            <flag name="delete" value="0x30" />
            <flag name="read" value="0x50" />
            <flag name="top" value="0x03" />
        </attr>
    </declare-styleable>

    <declare-styleable name="WatchFace">
        <attr name="secondHandColor" format="color" />
        <attr name="minuteHandColor" format="color" />
        <attr name="hourHandColor" format="color" />
        <attr name="scaleColor" format="color" />
        <attr name="faceBackground" format="color" />
        <attr name="scaleShow" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TopTextView">
        <attr name="Top_Text" format="string" />
        <attr name="Bottom_Text" format="string" />
        <attr name="Text_Spacing" format="integer" />
        <attr name="Top_Text_Color" format="color" />
        <attr name="Bottom_Text_Color" format="color" />
        <attr name="Top_Text_Size" format="dimension" />
        <attr name="Bottom_Text_Size" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ImageTopView">
        <attr name="Image_Text_Spacing" format="integer"/>
        <attr name="Text_Size" format="integer"/>
        <attr name="Image_Text" format="string"/>
        <attr name="Image_Drawable" format="reference"/>
        <attr name="Image_Size" format="integer"/>
        <attr name="Text_Color" format="reference|color"/>
        <attr name="Is_radius" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CustomChannelView">
        <attr name="Ch_Top_Drawable" format="reference|color"/>
        <attr name="Ch_Bottom_Text" format="string"/>
        <attr name="Ch_Bottom_Time" format="string"/>
        <attr name="Ch_ImageRadius" format="integer"/>
        <attr name="Ch_Middle_Image_Size" format="integer"/>
        <attr name="CH_Is_occlusion_on" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="Selector">
        <!--单选按钮图片-->
        <attr name="img" format="reference" />
        <!--单选按钮选中效果-->
        <attr name="indicator" format="reference" />
        <!--单选按钮标签-->
        <attr name="tag" format="string" />
    </declare-styleable>
</resources>